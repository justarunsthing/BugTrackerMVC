							<h2>Projects</h2>
						</div>
						<div class="card-body">
							@* [Copy and format table from Unassigned Tickets] *@
						</div>
						<div class="card-footer">
						</div>
					</div>
				</div>
			</div>
			@* Tickets Table *@
			<div class="col">
				<div class="bg-secondary">
					<div class="card m-1 p-2">
						<div class="card-header">
							<h2>Tickets</h2>
						</div>
						<div class="card-body">

							@* Copy and format table from Unassigned Tickets *@
						</div>
						<div class="card-footer">
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-2 ">
				<div class="bg-dark">
